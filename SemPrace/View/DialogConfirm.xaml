<Window x:Class="SemPrace.View.DialogConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:SemPrace.ViewModel"
        mc:Ignorable="d"
        Title="Potvrzení" Height="200" Width="250"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Window.DataContext>
        <local:DialogConfirmViewModel />
    </Window.DataContext>
    <Grid Height="184" VerticalAlignment="Center" HorizontalAlignment="Center" Width="282">
        <Button Content="Potvrdit" Margin="140,75,50,74" Width="60" Height="35" BorderThickness="0,0,0,0" Background="#FFC5DEA3" Command="{Binding ConfirmCommand}" />
        <Button Content="Zrušit" Margin="50,75,140,74" Width="60" Height="35" BorderThickness="0,0,0,0" Background="#FFF5C3C3" Command="{Binding CancelCommand}" />
    </Grid>
</Window>

