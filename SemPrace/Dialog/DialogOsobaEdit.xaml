<Window x:Class="SemPrace.Dialog.DialogOsobaEdit"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialog pro úpravu osoby" Height="250" Width="300">
    <Grid x:Name="grid" Width="300" HorizontalAlignment="Center" Height="250" VerticalAlignment="Top">



        <Label Content="Jméno:" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,28,124,0"/>
        <TextBox x:Name="JmenoTextBox" Grid.Row="0" Margin="74,54,0,0" HorizontalAlignment="Left" Width="156" VerticalAlignment="Top" TextChanged="JmenoTextBox_TextChanged" BorderThickness="0,0,0,1" />

        <Label Content="Příjmení:" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,87,120,0" RenderTransformOrigin="0.751,0.701"/>
        <TextBox x:Name="PrijmeniTextBox" Margin="74,0,0,0" HorizontalAlignment="Left" Width="156" VerticalAlignment="Center" TextChanged="PrijmeniTextBox_TextChanged" BorderThickness="0,0,0,1" />

        <Button x:Name="ConfirmButton" Content="Potvrdit" HorizontalAlignment="Left" Margin="169,163,0,57" Width="60" Click="ConfirmButton_Click" Height="30" Background="#FFC5DEA3" BorderThickness="0,0,0,0"/>

        <Button x:Name="CancelButton" Content="Zrušit" HorizontalAlignment="Left" Margin="74,162,0,58" Width="60" Click="CancelButton_Click" Height="30" Background="#FFF5C3C3" BorderThickness="0,0,0,0"/>
    </Grid>
</Window>
