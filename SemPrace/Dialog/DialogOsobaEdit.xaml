<Window x:Class="SemPrace.Dialog.DialogOsobaEdit"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialog pro novou osobu" Height="250" Width="300">
    <Grid x:Name="grid" Width="300" Height="250">



        <Label Content="Jméno:" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,11,118,0"/>
        <TextBox x:Name="JmenoTextBox" Grid.Row="0" Margin="80,37,0,0" HorizontalAlignment="Left" Width="156" VerticalAlignment="Top" TextChanged="JmenoTextBox_TextChanged" Grid.ColumnSpan="3" />

        <Label Content="Příjmení:" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,70,114,0" RenderTransformOrigin="0.751,0.701"/>
        <TextBox x:Name="PrijmeniTextBox" Margin="80,101,0,0" HorizontalAlignment="Left" Width="156" VerticalAlignment="Top" TextChanged="PrijmeniTextBox_TextChanged" Grid.ColumnSpan="3" />

        <Button x:Name="ConfirmButton" Content="Potvrdit" HorizontalAlignment="Left" Margin="175,146,0,74" Width="60" Click="ConfirmButton_Click" Height="30"/>
     
        <Button x:Name="CancelButton" Content="Zrušit" HorizontalAlignment="Left" Margin="80,145,0,75" Width="60" Click="CancelButton_Click" Height="30"/>
    </Grid>
</Window>
